<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/studentDetailsImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/studentDetailsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/studentDetailsImage"
        app:layout_constraintStart_toEndOf="@id/studentDetailsImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/studentDetailsId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ID"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsName"
        app:layout_constraintStart_toStartOf="@id/studentDetailsName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/studentDetailsPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsId"
        app:layout_constraintStart_toStartOf="@id/studentDetailsId"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/studentDetailsAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsPhone"
        app:layout_constraintStart_toStartOf="@id/studentDetailsPhone"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/studentDetailsChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editStudentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintTop_toBottomOf="@id/studentDetailsChecked"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>